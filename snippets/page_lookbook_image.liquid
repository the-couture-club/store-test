<div class="box">
    <div class="o-ratio o-ratio--modalo-ratio--{{ container_ratio }} o-ratio--3:4">
        <div class="o-ratio__content">

            <a class="product-card__link product-card__link--full-opacity js-product-link" tabindex="-1">

                {%- liquid
                assign image_width = 300
                assign image_height = 300
                assign image_alt = "Placeholder image"
                -%}
                <img class="product-card__img js-img-modal"
                    src="{{ image | img_url: '300x' }}"
                    srcset="{{ image | img_url: '180x' }} 180w 180h,
                    {{ image | img_url: '360x' }} 360w 360h,
                    {{ image | img_url: '540x' }} 540w 540h,
                    {{ image | img_url: '720x' }} 720w 720h,
                    {{ image | img_url: '900x' }} 900w 900h,
                    {{ image | img_url: '1080x' }} 1080w 1080h,
                    {{ image | img_url: '1296x' }} 1296w 1296h,
                    {{ image | img_url: '1512x' }} 1512w 1512h
                    " sizes="{{ image_sizes }}" width="{{ image_width }}"
                    height="{{ image_height }}" alt="{{ image_alt }}" loading="lazy" />
            </a>
        </div>
    </div>
</div>