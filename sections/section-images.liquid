    display: grid;
    grid-template-columns: 1fr 1fr 1fr 1fr;
}

.images-block .content .product-card__img {
    object-fit: cover;
}

@media screen and (max-width: 767px) {
    .images-block .content {
        grid-template-columns: 1fr 1fr;
    }
}

</style>


<script>
  (function() {
    const initFadeUp = (scope = document) => {
      const boxes = scope.querySelectorAll('.images-block .box:not(.js-fade-ready)');
      if (!boxes.length) return;

      boxes.forEach((box) => box.classList.add('animate--fade-up', 'js-fade-ready'));

      if (!('IntersectionObserver' in window)) {
        boxes.forEach((box) => box.classList.add('is-visible'));
        return;
      }

      const observer = new IntersectionObserver((entries, obs) => {
        entries.forEach((entry) => {
          if (entry.isIntersecting || entry.intersectionRatio >= 0.1) {
            entry.target.classList.add('is-visible');
            obs.unobserve(entry.target);
          }
        });
      }, { threshold: [0, 0.1], rootMargin: '0px 0px -10% 0px' });

      boxes.forEach((box) => observer.observe(box));
    };

    initFadeUp(document);

    document.addEventListener('shopify:section:load', (event) => {
      initFadeUp(event.target);
    });

    document.addEventListener('DOMContentLoaded', () => {
      initFadeUp(document);
    });
  })();
</script>

<style>
.images-block .box.animate--fade-up {
    opacity: 0;
    transform: translateY(24px);
    transition: opacity 0.45s ease, transform 0.45s ease;
}

.images-block .box.animate--fade-up.is-visible {
    opacity: 1;
    transform: translateY(0);
}
</style>


