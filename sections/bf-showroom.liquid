        }

        var email = form.querySelector('[type="email"]');
        console.log(variantID)

        if (email.validity.valid) {
            promise = BIS.create(email.value, variantID, productID);
            promise.then(function(data) {
                form.querySelector('[type="submit"]').value = '✅'
            })
        }

    }

    var keypadButtons = document.querySelectorAll("#bf-keypad button[data-num]")

