        }

    });

    function roomResize() {
        const container = document.getElementById('room-content-background-container');
        const page = document.getElementById('room-content');
        
        if (container.clientWidth > page.clientWidth || container.clientHeight < page.clientHeight ) {
            container.setAttribute('data-contain', 'height');
        } else {
            container.setAttribute('data-contain', 'width');
        }
    }

    function scrollPlacement() {
        var doc = document.getElementById('room-content')
        pageSize = ((doc.scrollWidth - doc.clientWidth) / 100) * 50
        doc.scrollTo(pageSize, 0)
    }

