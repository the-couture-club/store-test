<script src="{{ 'product-ticket.min.js' | asset_url }}" defer="defer"></script>

{% comment %}theme-check-disable TemplateLength{% endcomment %}
{%- liquid
    assign current_variant = product.selected_or_first_available_variant
    assign product_form_id = 'product-form-' | append: section.id

    assign switch = false
    assign tags = product.tags | downcase
    
    if tags contains 'female'
        unless product.title contains 'FLUFFY KNIT' or tags contains 'accessories'
            if product.images.size > 1
                assign switch = true
            endif
        endunless
    endif
-%}

{%- capture contentForQuerystring -%}{{ content_for_header }}{%- endcapture -%}
    
{%- assign pageUrl = contentForQuerystring
    | split: '"pageurl":"'
    | last
    | split: '"'
    | first
    | split: '.myshopify.com'
    | last
    | replace: '\/', '/'
    | replace: '%20', ' '
    | replace: '\u0026', '&'
-%}

{% capture finalurl %}https://{{ pageUrl | downcase }}{% endcapture %}

{% if settings.enable_private_link == false %}
    {% assign isPrivate = false %}
    {% else %}
        {% if finalurl contains '?private' %}
            {% assign isPrivate = false %}
        {% else %}
            {% assign isPrivate = true %} 
        {% endif %}
{% endif %}

{% assign oosVariants = 0 %}

{% for variant in product.variants %}
    {% if variant.available == false %}
        {% assign oosVariants = oosVariants | plus: 1 %}
    {% endif %}
{% endfor %}

{% assign giftCardID = settings.gift_card_id | plus: 0 %}

<div id="ProductSection-{{ section.id }}">
    <section class="section section--product-single section--{{ section.id }}" data-section-id="{{ section.id }}" data-section-type="product-single">

        <div class="product-single product-single--minimal product-single--{{ product.id }} js-product-{{product.id}} js-product-single" data-product-id="{{product.id}}">

            <div class="product_container">
                <div class="product_container__image">
                    {% assign productMeta = product.metafields.custom.product_grid_tag %}

                    {% if productMeta.value != null %}
                        {% for metaobject in shop.metaobjects['product_grid_tag'].values %}
                            {% if metaobject['tag_content'].value ==  productMeta.value['tag_content'] %}
                                {% capture handle %}{{ metaobject.system.handle }}{% endcapture %}
                            {% endif %}
                        {% endfor %}

                        {% if handle == 'restock' or handle == 'launch' %}
                            <a style="background: {{ productMeta.value['tag_colour'] }}; color:{{ productMeta.value['tag_font_colour'] }};" class="product-card__tag cc-pointer cc-uppercase"> {{ productMeta.value['tag_content'] | replace: '[date]', product.metafields.global.coming_soon_eta_display  }}</a>
                        {% else %}
                            <a style="background: {{ productMeta.value['tag_colour'] }}; color:{{ productMeta.value['tag_font_colour'] }};" class="product-card__tag cc-pointer cc-uppercase"> {{ productMeta.value['tag_content'] }}</a>
                        {% endif %}

                    {% else %}

                        {% if product.compare_at_price > product.price %}
                            <a class="product-card__tag percentage_discount cc-pointer cc-uppercase">{% assign discount = product.price | divided_by: product.compare_at_price | times: 100.0 | round: 2 %} {{ product.compare_at_price | minus: product.price | times: 100.0 | divided_by: product.compare_at_price | round }}% Off</a>
                        {% endif %}

                    {% endif %}

                    <ul class="splide__pagination"></ul>

                    <section class="splide">
                        <div class="splide__track">
                              <ul class="splide__list">
                                {% for image in product.images %}
                                    <li aria-image="{{forloop.index}}" class="splide__slide">
                                        <img aria-url="{{ image.src | image_url: width: master }}" src="{{ image.src | image_url: width: 1200 }}">
                                    </li>
                                {% endfor %}
                              </ul>
                        </div>
                      </section>

                </div>
                <div class="product_container__content">
                    <div class="container">
                        <div class="product_container__content-header">
                            <span class="product_container--toggle"></span>
                            <div class="product_container__content-header--details cc-fs1">
                                {% assign productTitle = product.title | downcase | split: ' - ' %}
                                <h1 class="cc-fs1">{{productTitle[0] | upcase }} </h1>
                            {% if customer.tags contains 'clubhouse-member' %}<span class="cc-opacity">CLUBHOUSE BONUS APPLIED</span>{% endif %}
                                {% render 'product-price',
                                                                    product: product,
                                                                    from_price: true,
                                                                    show_price_notes: false
                                                                %}
                            </div>
                            {% form 'product', product, class: "js-product-form" %}
                            <div class="product_container__content-header--form">
                                {% if product.metafields.global.coming_soon_eta_display != null and product.selected_or_first_available_variant.inventory_policy == 'continue' %}{% assign preOrderStatus = product.metafields.global.coming_soon_eta_display %}{% else %}{% assign preOrderStatus = '*' %}{% endif %}
                                <input disabled type="hidden" id="properties_preorder" name="properties[_pre_order]" data-date="{{ product.metafields.global.coming_soon_eta_display }}" value="{{ preOrderStatus }}" />
                                <input type="hidden" name="properties[_is_pre_order]" value="true" />
                                <input type="hidden" name="id" value="{{ current_variant.id }}">
                                {% if customer.tags contains 'clubhouse-member' %}<input type="hidden" value="1" name="properties[_evey:attendee:1:1:clubhouse]" data-name="clubhouse">{% endif %}
                                {% if product.metafields.shopify--discovery--product_recommendation.complementary_products != null %}{% assign type = 'complementary' %}{% else %}{% assign type = 'related' %}{% endif %}
                                <input type="hidden" id="recommendation_type" name="properties[_recommendation]" value="{{type}}" checked="">
                                <div class="product_container__content-header--form_select">
                                    {% if oosVariants >= 3 %}
                                    <div class="similar_items-cta js-button-similar cc-pointer cc-fs2">{{ "custom.similar_items" | t | uppercase }}</div>
                                    {% endif %}
                                    <div class="es-product_form__select-container">
                                        <span class="product-form__select-overlay u-hidden@tab-up"></span>
                                            <select id="product-form__select" {% if handle == 'launch' %}data-launch="true"{% endif %} autocomplete="off" required class="cc-fs1 cc-uppercase">
                                            <option value="" disabled selected>Select Your Ticket</option>
                                            {% for variant in product.variants %}
                                            {% assign preOrderQuery = variant.metafields.custom.pre_order_quantity_amount %}
                                                <option
                                                    data-policy="{{ variant.inventory_policy }}"
                                                    data-inventory="{{preOrderQuery}}" 
                                                    {% if preOrderQuery > 0 and variant.inventory_policy == 'continue' %}
                                                    data-preorder="{{true}}"
                                                    {% endif %}
                                                    title="{{ variant.title }}"
                                                    data-stock="999"
                                                    data-price="{{variant.price | money }}"
                                                    value="{{ variant.id }}"
                                                >
                                                    {{ variant.title }} - {{variant.price | money }}
                                                    {% assign preOrderQuery = variant.metafields.custom.pre_order_quantity_amount %}
                                                    {% if variant.available == false and handle != 'launch' and handle != 'restock' %}
                                                        - {{ 'products.product.qty_notice_sold_out' | t }}
                                                    {% endif %}
                                                    {% if preOrderQuery <= 0 and variant.inventory_policy =='continue' %}
                                                        - {{ 'products.product.qty_notice_sold_out' | t }}
                                                    {% endif %}
                                                </option>
                                            {% endfor %}
                                        </select>
                                        <span id="product-form__select-arrow">
                                            <span class="last_stock cc-fs1 cc-uppercase"></span>
                                            <i class="icon icon--down" aria-hidden="true"></i>
                                        </span>
                                    </div>
                                </div>

                                <div data-stock="" {% if product.gift_card? %}gift-card{% endif %} class="product_container__content-header--form_submit">
                                <button {% if isPrivate %} disabled {% endif %} type="submit" name="add" class="c-btn c-btn--full product-form__add-btn js-product-add">
                                        <span class="product-form__add-btn__text">
                                            <span class="js-product-add-text">
                                                <a data-type="add">
                                                    {% unless isPrivate %}
                                                        {{ 'products.product.add_to_cart' | t }} <span class="ticket-price"></span>
                                                    {% else %}
                                                        {{ 'products.product.unavailable' | t }}
                                                    {% endunless %}
                                                </a>
                                                <a data-type="preorder">{{ 'products.product.preorder' | t }}</a>
                                            </span>
                                        </span>
                                        <span class="product-form__add-btn__tick"><i class="icon icon--tick"></i></span>
                                        <span class="product-form__add-btn__spinner">
                                            <div class="theme-spinner">
                                                <div class="theme-spinner__border"></div>
                                                <div class="theme-spinner__border"></div>
                                                <div class="theme-spinner__border"></div>
                                                <div class="theme-spinner__border"></div>
                                            </div>
                                        </span>
                                    </button>
                                    {% render 'bis-button' handle: handle %}
                                </div>
                            </div>
                            {% endform %}
                        </div>
                        <div class="product_container__content--main">
                            <div class="product_container__content--main--left">

                                <div class="product_details">
                                    <span class="cc-fs1 cc-uppercase">EVENT DETAILS</span>
                                    {% if section.settings.show_breadcrumbs %}
                                            <nav class="breadcrumb breadcrumb--product-single js-breadcrumb" role="navigation" aria-label="breadcrumbs">
                                                <ul class="breadcrumb__items o-list-bare o-list-inline">
                                                    <span style="position: absolute; height: 20px; width: 20px; right: 18px; background: rgb(255,255,255); background: linear-gradient(270deg, rgba(255,255,255,1) 0%, rgba(2,0,36,0) 100%);"></span>
                                                    <li class="breadcrumb__item o-list-inline__item">
                                                        <a href="{{ routes.root_url }}" title="{{ 'layout.navigation.home' | t }}" class="breadcrumb__link u-small">{{ 'layout.navigation.home' | t }}</a>
                                                    </li>
                                                    {% if collection.url %}
                                                        <li class="breadcrumb__item o-list-inline__item">
                                                            <a href="{{ collection.url }}" class="breadcrumb__link u-small">{% assign collectionTitle = collection.title | split: ' ' %}{%for word in collectionTitle%}{{word | capitalize}} {% endfor %}</a>
                                                        </li>
                                                    {% endif %}
                                                    <li class="breadcrumb__item o-list-inline__item">
                                                        <span href="{{ routes.root_url }}" class="breadcrumb__link u-small breadcrumb__link--current">{% assign productTitle = product.title | split: ' ' %}{%for word in productTitle%}{{word | capitalize}} {% endfor %}</span>
                                                    </li>
                                                </ul>
                                            </nav>
                                        {% endif %}
                                        
                                    <div class="product_description cc-fs2 cc-opacity">
                                      {% if product.tags contains 'NONRETURN'  %}
                                        <div class="non-refund">{{ "custom.non-refundable-product" | t | uppercase }}</div>
                                      {% endif %}
                                        {{product.description}}
                                    </div>
                                    {% if product.metafields.custom.fit_guide_percentage %}
                                    <div id="tts_container" class="cc-opacity">
                                        <div class="tts_content">
                                            <span class="tts_line"></span>
                                            <span style="left: {{ product.metafields.custom.fit_guide_percentage.value }}%;" class="tts_dot"></span>
                                            <span data-line="left"></span>
                                            <span data-line="middle"></span>
                                            <span data-line="right"></span>
                                        </div>
                                        <div class="tts_text cc-fs2">
                                            <span>Smaller</span>
                                            <span>True to Size</span>
                                            <span>Larger</span>
                                        </div>
                                    </div>

                                    {% assign percentage = product.metafields.custom.fit_guide_percentage.value %}

                                    {% if percentage >= 0 and percentage < 25 %}
                                        {% assign text = "custom.tts__0-24" | t %}
                                    {% elsif percentage >= 25 and percentage < 50 %}
                                        {% assign text = "custom.tts__25-49" | t %}
                                    {% elsif percentage == 50 %}
                                        {% assign text = "custom.tts__50" | t %}
                                    {% elsif percentage > 50 and percentage < 75 %}
                                        {% assign text = "custom.tts__51-74" | t %}
                                    {% else %}
                                        {% assign text = "custom.tts__75-over" | t %}
                                    {% endif %}

                                    <div class="tts_info cc-fs2 cc-opacity">
                                        <i class="icon icon--tick" aria-hidden="true"></i>
                                        <span>{{text}}</span>
                                    </div>
                                {% endif %}
                                </div>
                                <!-- TrustBox widget - Product Reviews MultiSource -->

<!-- End TrustBox widget -->

                                <div class="product_accordion--container">

                                    {% include 'accordion-payment' %}

                                    {% for accordion in shop.metaobjects['product_page_accordion'].values %}
                                        <accordion-group>
                                            <details id="product-accordion-1">
                                                <summary>
                                                    <h6 class="cc-fs2 cc-uppercase">{{accordion['accordion_title']}}</h6>
                                                    <summary-icon>
                                                        <i class="icon icon--plus" aria-hidden="true"></i>
                                                    </summary-icon>
                                                </summary>

                                                <details-content>
                                                    <div class="product-single__accordion__item-wrap rte">
                                                    {{accordion['page_reference'].value.content}}
                                                    </div>
                                                    
                                                </details-content>
                                            </details>
                                        </accordion-group>
                                    {% endfor %}
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>

        </div>
    </section>
</div>

{% if oosVariants >= 3 %}

<div id="product_similar">
    <div id="product_similar_overlay">
        <span id="product_similar-container" class="cc-f2">
            <div id="product_similar-container--content">
                <div>
                    <div class="product_similar-header">
                        <span class="product_similar-title cc-uppercase cc-fs1">Suggested Products</span>
                        <a class="cc-fs1 cc-uppercase cc-underline cc-pointer js-button-similar">Close</a>
                    </div>
                    <div class="product_similar-products-container">
                        <div class="product_similar-products">
                            {% if product.metafields.custom.similar_products.value != null %}
                                {% assign array = product.metafields.custom.similar_products.value %}
                            {% else %}
                                {% assign typeHandle = product.type | handle %}
                                {% assign collectionHandle = typeHandle | append: '-index'  %}
                                {% assign array = collections[collectionHandle].products %}
                            {% endif %}
                            {% for prod in array %}
                            {% render 'product-grid-item',
                                product: prod,
                                swatchEnable: false,
                                page: 'recommendations',
                                image_sizes: sizes,
                                small_buttons_on_mobile: small_buttons_on_mobile,
                                nodrawer: true
                            %}
                        {% endfor %}
                        </div>
                    </div>
                </div>
            </div>
        </span>
        <span data-overlay class="js-button-similar"></span>
    </div>
</div>

{% endif %}

{% include 'slideshow-zoom' %}

{% render 'bis', product: product, handle: handle %}

{% render 'product-mobile-selector', product: product, handle: handle, ticket: true %}

{% render 'size-guide', product: product %}
    

{% unless product == empty %}
    <script type="application/json" id="ModelJson-{{ section.id }}">
        {{ product.media | where: 'media_type', 'model' | json }}
    </script>
{% endunless %}

{%- if request.design_mode -%}
    <script src="{{ 'pickup-availability.js' | asset_url }}" type="module"></script>
    <script src="{{ 'product-recommendations.js' | asset_url }}" type="module"></script>
    <script src="{{ 'items-scroll.js' | asset_url }}" type="module"></script>
    <script src="{{ 'product-media-sticky.js' | asset_url }}" type="module"></script>
    <script src="{{ 'gift-card-recipient.js' | asset_url }}" type="module"></script>
{%- endif -%}
{%- if section.settings.enable_zoom or request.design_mode -%}
    <link rel="stylesheet" href="{{ 'photoswipe.css' | asset_url }}">
    <script type="module">
        import PhotoSwipeLightbox from "{{ 'photoswipe-lightbox-v5.3.2.esm.min.js' | asset_url }}";
        import { correctThumbBounds } from "{{ 'photoswipe-filters.js' | asset_url }}";

        if (!customElements.get('product-media-zoom')) {
            customElements.define('product-media-zoom', class ProductMediaZoom extends HTMLElement {
                constructor() {
                    super();
                    this.initZoom();
                    this.previouslyFocusedElement = null;
                }

                initZoom() {
                    const gallery = this.querySelector('.js-product-slider');

                    const lightbox = new PhotoSwipeLightbox({
                        arrowPrevSVG: `
                            <i class="pswp__icn icon icon--left-l" aria-hidden="true"></i>
                        `,
                        arrowNextSVG: `
                            <i class="pswp__icn icon icon--right-l" aria-hidden="true"></i>
                        `,
                        zoomSVG: `
                            <svg aria-hidden="true" focusable="false" role="presentation" class="pswp__icn icon icon-plus" xmlns="http://www.w3.org/2000/svg" width="48" height="48" viewBox="0 0 48 48">
                                <g fill="none" fill-rule="evenodd">
                                    <path fill="currentColor" d="M29.3137,10.2365 C35.5621,16.4849 35.5621,26.6155 29.3137,32.8639 C23.0653,39.1123 12.9347,39.1123 6.68629,32.8639 C0.437903,26.6155 0.437903,16.4849 6.68629,10.2365 C12.9347,3.98807 23.0653,3.98807 29.3137,10.2365 Z M30.7279,8.82225 C37.7574,15.8517 37.7574,27.2487 30.7279,34.2781 C23.6985,41.3075 12.3015,41.3075 5.27208,34.2781 C-1.75736,27.2487 -1.75736,15.8517 5.27208,8.82225 C12.3015,1.79281 23.6985,1.79281 30.7279,8.82225 Z M34.5779,34.9792 C34.1873,34.5886 33.5542,34.5886 33.1636,34.9792 C32.7731,35.3697 32.7731,36.0029 33.1636,36.3934 L44.4774,47.7071 C44.8679,48.0976 45.501,48.0976 45.8916,47.7071 C46.2821,47.3166 46.2821,46.6834 45.8916,46.2929 L34.5779,34.9792 Z"/>
                                    <path class="pswp__zoom-icn-bar-v" fill="currentColor" d="M19.4858,11.9755 C19.4858,11.4367 19.0445,11 18.5,11 C17.9555,11 17.5142,11.4367 17.5142,11.9755 L17.5142,30.8043 C17.5142,31.3431 17.9555,31.7798 18.5,31.7798 C19.0445,31.7798 19.4858,31.3431 19.4858,30.8043 L19.4858,11.9755 Z"/>
                                    <path class="pswp__zoom-icn-bar-h" fill="currentColor" d="M8.98582,20.4144 C8.44137,20.4144 8,20.8511 8,21.3899 C8,21.9286 8.44137,22.3654 8.98582,22.3654 L28.0142,22.3654 C28.5586,22.3654 29,21.9286 29,21.3899 C29,20.8511 28.5586,20.4144 28.0142,20.4144 L8.98582,20.4144 Z"/>
                                </g>
                            </svg>
                        `,
                        closeSVG: `
                            <i class="pswp__icn icon icon--close-l" aria-hidden="true"></i>
                        `,
                        counter: false,
                        gallery: gallery,
                        children: '.media-gallery__link',
                        bgOpacity: 1,
                        pswpModule: () => import("{{ 'photoswipe-v5.3.2.esm.min.js' | asset_url }}")
                    });

                    lightbox.init();

                    lightbox.addFilter('thumbBounds', correctThumbBounds);

                    lightbox.on('afterInit', () => {
                        this.previouslyFocusedElement = document.activeElement;
                        lightbox.pswp.element.focus();

                        $('.js-product-single .js-product-slider').slick('slickSetOption', 'speed', 0);
                    });

                    lightbox.on('change', () => {
                        const current = lightbox.pswp.currSlide;
                        const { slideId } = current.data.element.dataset;
                        if (slideId) {
                            $('.js-product-single .js-product-slider').slick('goTo', Number(slideId));
                        }
                    });

                    lightbox.on('close', () => {
                        if (this.previouslyFocusedElement) {
                            this.previouslyFocusedElement.focus({preventScroll: true});
                            this.previouslyFocusedElement = null;
                        }
                        $('.js-product-single .js-product-slider').slick('slickSetOption', 'speed', 300);
                    });
                }
            });
        }
    </script>
{% endif %}

