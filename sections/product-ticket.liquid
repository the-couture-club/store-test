        {
            "type": "checkbox",
            "id": "enable_sticky_gallery",
            "label": "Enable sticky image gallery",
            "default": true
        },
        {
            "type": "checkbox",
            "id": "enable_video_looping",
            "label": "Enable video looping",
            "default": false
        },
        {
            "type": "select",
            "id": "product_image_ratio",
            "label": "Image container ratio",
            "default": "1:1",
            "options": [
                {
                    "value": "1:1",
                    "label": "Square (1:1)"
