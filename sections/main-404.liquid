<section class="section section--404">
    <div class="404">
        <div class="container">
            <div class="section__title section__title--center section__title--desc">
                <h1 class="section__title-text cc-uppercase cc-bold">{{ 'general.404.title' | t }}</h1>
                <p class="section__title-desc cc-fs1">{{ 'general.404.subtext' | t }}</p>
            </div>
            <div class="u-text-center">
	            <a href="{{ routes.root_url }}" class="cc-btn cc-uppercase">{{ 'general.404.link' | t }}</a>
	        </div>
        </div>
        {% if section.settings.desktop_image != blank %}
            <img
                class="password-content__bg u-hidden@tab-down"
                src="{{ section.settings.desktop_image | img_url: '720x' }}"
                srcset="{% render 'bgset', image: section.settings.desktop_image %}"
                width="720"
                height="{{ 720 | divided_by: section.settings.desktop_image.aspect_ratio | round }}"
                alt="{{ section.settings.desktop_image.alt }}"
                loading="lazy"
                style="object-position:{{ section.settings.desktop_image.presentation.focal_point }}"
            />
        {% endif %}
        {% if section.settings.mobile_image != blank %}
            <img
                class="password-content__bg u-hidden@tab-up"
                src="{{ section.settings.mobile_image | img_url: '720x' }}"
                srcset="{% render 'bgset', image: section.settings.mobile_image %}"
                width="720"
                height="{{ 720 | divided_by: section.settings.mobile_image.aspect_ratio | round }}"
                alt="{{ section.settings.mobile_image.alt }}"
                loading="lazy"
                style="object-position:{{ section.settings.mobile_image.presentation.focal_point }}"
            />
        {% endif %}
    </div>
</section>

{% schema %}
    {
      "name": "404 Page",
      "settings": [
        {
            "type": "image_picker",
            "id": "desktop_image",
            "label": "Desktop Image"
        },
        {
            "type": "image_picker",
            "id": "mobile_image",
            "label": "Mobile Image"
        }
      ],
      "presets": [
      {
          "name": "404 Page"
      }
      ]
    }
  {% endschema %} 